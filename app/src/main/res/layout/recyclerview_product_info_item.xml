<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    >

    <TextView
        android:id="@+id/tv_rv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/font_bold"
        android:includeFontPadding="false"
        android:text="상품 설명 이름"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rv_info_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세상품 설명 상세"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="@font/font_thin"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_rv_info_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_info_title" />
</androidx.constraintlayout.widget.ConstraintLayout>